@model IEnumerable<LabProject.Models.CartItem>
<!DOCTYPE html>

<html>
<head>
    <title>Your cart</title>
</head>
<body>
    <h3>Your cart</h3>
    @if (Model.FirstOrDefault() != null)
    {
        <table class="table">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src=@item.ImageUrl style="display:block; width:200px"/>
                    </td>
                    <td>
                        <p style="font-weight:bold">@item.Brand @item.ItemName</p>
                    </td>
                    <td>
                        <p>@item.Price BYN</p>
                    </td>
                    <td>
                        <p>Size: @item.Size</p>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-controller="Cart" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>

        <br/>

        <a class="btn btn-sm btn-primary" asp-action="BuyAll" asp-controller="Cart">Checkout</a>
    }
    else
    {
        <h4>Your cart is empty</h4>
    }
</body>
</html>
