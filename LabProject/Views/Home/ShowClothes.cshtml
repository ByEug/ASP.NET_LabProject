@model LabProject.Resources.Models.WearProduct
@{
    ViewData["Title"] = "Fitroom";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Fitroom</title>
    <link rel="stylesheet" href="~/css/buttonStyles.css" />
</head>
<body>
    <div class="one_product">
        <img src=@Model.ImageUrl>
        <h4>@Model.Brand.BrandName @Model.ModelName</h4>
        <i>@Model.Discription</i>

        <p>Recommended use: @Model.UseWay.WayName</p>
        <p>Price: @Model.Price BYN</p>
        <p>Choose size:</p>
        <form asp-action="BuyWear" asp-controller="Cart" asp-route-wearid="@Model.Id">
            <input name="size" type="radio" value="S" />
            <span>S: @Model.AmountS pcs.</span> <br />
            <input name="size" type="radio" value="M" />
            <span>M: @Model.AmountM pcs.</span> <br />
            <input name="size" type="radio" value="L" />
            <span>L: @Model.AmountL pcs.</span> <br />
            <input name="size" type="radio" value="XL" />
            <span>XL: @Model.AmountXL pcs.</span> <br />
            <input name="size" type="radio" value="XXL" />
            <span>XXL: @Model.AmountXXL pcs.</span> <br />

            <p>
                <input type="submit" value="Add to cart" />
            </p>
        </form>
    </div>

</body>
</html>
